<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    android:weightSum="11"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/themeblack"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout


        android:weightSum="5"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@color/white"
        >

        <LinearLayout


            android:weightSum="2"
            android:layout_weight="3.2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioGroup

                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:id="@+id/radioGroup"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/radioButton1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Default Delivery Address"
                    android:textSize="18sp"/>

                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Custom Address"
                    android:textSize="18sp"/>


            </RadioGroup>

        </LinearLayout>

        <LinearLayout

            android:visibility="gone"
            android:id="@+id/layout_custom_address"
            android:orientation="vertical"
            android:layout_weight="1.8"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout

                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:background="@drawable/shape_rectangle_round_blue"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText

                    android:id="@+id/custm_address"
                    android:gravity="center_vertical"
                    android:hint="Enter Address"
                    android:textSize="@dimen/_11sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@null"
                    android:inputType="textPostalAddress"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp" />

            </LinearLayout>

            <LinearLayout

                android:layout_marginTop="@dimen/_10sdp"

                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:background="@drawable/shape_rectangle_round_blue"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText

                    android:id="@+id/custm_address_city"
                    android:gravity="center_vertical"
                    android:hint="Enter City"
                    android:textSize="@dimen/_11sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@null"
                    android:inputType="textPostalAddress"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp" />

            </LinearLayout>

            <LinearLayout

                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:background="@drawable/shape_rectangle_round_blue"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText

                    android:id="@+id/custm_address_postcode"
                    android:gravity="center_vertical"
                    android:hint="Enter PostCode"
                    android:textSize="@dimen/_11sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@null"
                    android:inputType="textPostalAddress"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp" />

            </LinearLayout>

            <Button

                android:id="@+id/btn_custom_address"
                android:fontFamily="@font/raleway_medium"
                android:textColor="@color/white"
                android:text="Submit"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/shape"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp" />



        </LinearLayout>

    </LinearLayout>

</LinearLayout>